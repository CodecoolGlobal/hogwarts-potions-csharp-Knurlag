@using HogwartsPotions.Models.Entities
@model HogwartsPotions.Models.Entities.Potion

@{
    ViewData["Title"] = "Details";
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="background-container details-site" style="background-image: url(/images/openbook.jpg);">
    <h1 class="edit-h1">Details</h1>

    <div>
        <h4>Potion</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BrewingStatus)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BrewingStatus)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Recipe.Ingredients)
            </dt>
            @foreach (Ingredient ing in ViewBag.Ingredients) {
                <dd class = "col-sm-10">
                    @ing.Name
                </dd>
            }
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="login-button button-55">Edit</a> |
        <a asp-action="Index" class="login-button button-55">Back to List </a>
    </div>
</div>
